// HTML template used to render a single font sample
(font) => `<html>
  <body>
    <style>
      @import url("${ font/url }");

      body {
        box-sizing: border-box;
        font-family: "${ font/name }";
        font-size: 32px;
        height: 200px;
        margin: 0;
        padding: 8px;
        width: 600px;
      }
    </style>
    <h1>${ font/name }</h1>
    <p>Lorem ipsum dolor sit amet.</p>
  </body>
</html>
`