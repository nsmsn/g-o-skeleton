// Template for a single font
(font) => page.ori({
  title: font/name
  @text: `
    <a href="..">Typo.town</a>
    <p>
      <img src="../images/${ font/id }.png" alt="${ font/name } font sample" height="200" width="600">
    </p>
    <p>
      ${ font/@text }
    </p>
    <ul>
    ${ @map(font/tags, (tag) => `
      <li>
        <a href="../tags/${ tag }.html">${ tag }</a>
      </li>
    `) }
    </ul>
  `
})
